<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>HostAbroad</display-name>
  <servlet>
    <servlet-name>HostAbroad</servlet-name>
    <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
    <init-param>
      <param-name>UI</param-name>
      <param-value>com.presentation.Test</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>HostAbroad</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  
  <!-- Mappeo la searchUI -->
   <servlet>
    <servlet-name>SearchUI</servlet-name>
    <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
    <init-param>
      <param-name>UI</param-name>
      <param-value>com.presentation.SearchUI</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchUI</servlet-name>
    <url-pattern>/search/*</url-pattern>
  </servlet-mapping>
  
</web-app>